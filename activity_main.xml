<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/matrixSizeInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter matrix size"
        android:inputType="number"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/generateMatrixButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Matrix"
        android:layout_below="@id/matrixSizeInput"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/generateMatrixButton"/>
</RelativeLayout>